<div class="fullscreen background" style="background-image:url('http://static.simpledesktops.com/uploads/desktops/2013/08/01/stratigraphy.png');" data-img-width="1600" data-img-height="1064">
  <div class="content-a">
    <div class="content-b">
      <div class="row center-xs">
        <div class="col-xs-12">
          <div class="box">
            <h1 class="real-feelz">RealFeelz</h1>
            <h2 class="right-now">What's Real For You Right Now?</h2>
            <span class="no-bs">Anonymous. No BS. Just be you.</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<nav class="breadcrumbs">
  <a href="#">Home</a>
  <a href="#">About</a>
</nav>

<div class="row center-xs">
  <div class="col-xs-12">
    <div class="box">
      <form {{action "postStatement" newPost on="submit"}}>
        {{textarea placeholder="what's real for you right now?" class="text-field" value=newPost type="text" autofocus="true" cols="40" maxlength="200" require="true" wrap="hard"}}
        <div id="recaptcha"></div>
          <div class="status-text">
            {{#if verifyingCaptcha}}
            <p>Verifying Captcha...</p>
            {{/if}}
            {{#if showingCaptcha}}
            <p>Getting a Captcha...</p>
            {{/if}}
            {{#if captchaVerified }}
            <p>Now that we know you are a human, hit post again to share.</p>
          </div>
        {{/if}}
        {{#if tryAgain}}
          <p>Try again...</p>
        {{/if}}
          <button class="button radius" type="submit">Post</button>
      </form>
      {{outlet}}
    </div>
  </div>
</div>

