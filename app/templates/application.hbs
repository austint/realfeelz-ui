<div class="row center-xs">
  <div class="col-xs-12">
    <div class="box">
      <form {{action "postStatement" newPost on="submit"}}>
        {{textarea class="text-field" value=newPost type="text" autofocus="true" cols="40" maxlength="200" require="true" wrap="hard"}}
        <div id="recaptcha"></div>
          <div class="status-text">
            {{#if verifyingCaptcha}}
            <p>Verifying Captcha...</p>
            {{/if}}
            {{#if showingCaptcha}}
            <p>Getting a Captcha...</p>
            {{/if}}
            {{#if captchaVerified }}
            <p>Now that we know you are a human, hit post again to share.</p>
          </div>
        {{/if}}
        {{#if tryAgain}}
          <p>Try again...</p>
        {{/if}}
          <button class="post" type="submit">Post</button>
      </form>
      {{outlet}}
    </div>
  </div>
</div>

