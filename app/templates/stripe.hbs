{{view 'stickykit-view'}}
{{view 'flickerplate-view'}}

{{!-- https://unsplash.imgix.net/reserve/wVlfnlTbRtK8eGvbnBZI_VolkanOlmez_005.jpg?q=75&fm=jpg&s=de70d125f08a3fbb40d6b9984af5c3ad --}}

<body style="display: block;" data-icon-font="icomoon" data-ui="stripe" class="invert">
  {{!-- <a href="#" class="navigation-trigger icon-menu small-show scroll-position"></a> --}}
  <nav class="absolute">
    <div class="contain">
      <div class="logo-container">
        <a href="#" class="logo-line">RealFeelz</a>
      </div>
    </div>
  </nav>

  <header class="stripe full">
    <div class="flickerplate">
      <div class="slideshow bg-image">
        <div class="arrow-navigation left"></div>
        <div class="arrow-navigation right"></div>

        <ul class="flicks">
          <li data-background='/assets/images/locks-ocean-medium.jpg'>
            <div class="flick-inner">
              <div class="flick-content">
                <div class="flick-title">What's Real For You Right Now?</div>
              </div>
                <div class="flick-title">Anonymously Share Your Truth</div>
            </div>
          </li>
          <li data-background='/assets/images/black-white-woman.jpg'>
            <div class="flick-inner">
              <div class="flick-content">
                <div class="flick-title">{{#link-to 'index'}}Truth{{/link-to}}</div>
              </div>
            </div>
          </li>
          <li data-background='/assets/images/locked-wood.jpg'>
            <div class="flick-inner">
              <div class="flick-content">
                <div class="flick-title">{{#link-to 'index'}}Confession{{/link-to}}</div>
              </div>
            </div>
          </li>
          <li data-background='/assets/images/starry-night.jpeg'>
          <div class="flick-inner">
            <div class="flick-content">
                <div class="flick-title">{{#link-to 'index'}}Awareness{{/link-to}}</div>
              </div>
            </div>
          </li>
          <li data-background='/assets/images/canoe-boys.jpg'>
            <div class="flick-inner">
              <div class="flick-content">
                <div class="flick-title">{{#link-to 'index'}}Connection{{/link-to}}</div>
              </div>
            </div>
          </li>
        </ul>
      </div>
      </div>
    </div>
  </header>

  <div id="sticky_item">
    <div class="container form-post">
        <div class="row">
          <div class="ten columns offset-by-one">
            <form {{action "postStatement" newPost on="submit" }}>
              {{textarea placeholder="what's real for you right now?" class="text-field" value=newPost type="text" autofocus="true" cols="40" maxlength="200" require="true" wrap="hard"}}
              <div id="recaptcha"></div>
              <div class="status-text">
                {{#if verifyingCaptcha}}
                <p>Verifying Captcha...</p>
                {{/if}} {{#if showingCaptcha}}
                <p>Getting a Captcha...</p>
                {{/if}} {{#if captchaVerified }}
                <p>Now that we know you are a human, hit post again to share.</p>
                {{/if}} {{#if tryAgain}}
                <p>Try again...</p>
                {{/if}}
              </div>
              <button class="button radius" type="submit">Post</button>
            </form>
          </div>
        </div>
    </div>
  </div>

  <div class="container truth-container">
    <div class="row">
      <div class="ten columns offset-by-one of-truths">
        <ul>
          {{#each}}
          <h5 class="truths">{{body}}</h5>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

  <div class="footer">
    <div class="container">
      <div class="row">
        <div class="ten columns offset-by-one">
          <ul>
            <li>&copy;2014 {{#link-to 'flickerplate'}}RealFeelz{{/link-to}}</li>
            <li>{{#link-to 'flickerplate'}}About{{/link-to}}</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="stripe dark footer">
    <div class="container">
      <div class="row">
        <div class="twelve columns offset-by-one">
        <br>
        </div>
      </div>
    </div>
  </div>

</body>